DEFINES=-DRVD -DNAMESERVER -DVFS -DKRB5 -I$(KRB5DIR)/include $(MACHDEP)

AFSLIBS = $(AFSDIR)/lib/afs/libauth.a $(AFSDIR)/lib/afs/libsys.a

#if defined(SOLARIS)
MACHDEP = -DINITTAB
AFSLIBS = $(AFSDIR)/lib/afs/libauth.a $(AFSDIR)/lib/afs/libsys.a $(AFSDIR)/lib/librx.a $(AFSDIR)/lib/liblwp.a /usr/athena/lib/libbsd.a
#endif

#ifdef sgi
MACHDEP = -DINITTAB
AFSLIBS = $(AFSDIR)/lib/afs/libauth.a $(AFSDIR)/lib/afs/libsys.a $(AFSDIR)/lib/librx.a $(AFSDIR)/lib/liblwp.a
#endif

#ifdef ultrix
#ifdef vax
MACHDEP=-DPOSIX -DSYSLOG42
#else
MACHDEP=-DPOSIX -Olimit 600
#endif
#endif
#ifdef i386
MACHDEP=-DPOSIX -DSYSV -DINITTAB -DNOPFLAG
#endif

LIBS=-lknet -lkrb -ldes -L$(KRB5DIR)/lib -lkrb5 -lcrypto -lcom_err -lhesiod

#ifdef ultrix
build_program(login,login.o,,$(AFSLIBS) -lnsyslog $(LIBS))
#else
build_program(login,login.o,,$(AFSLIBS) $(LIBS))
#endif
install_program(login,-o root -m 4555,/bin/login)
