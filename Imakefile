DEFINES=-DRVD -DNAMESERVER -DVFS $(MACHDEP)

#ifdef UseInstalled
AFSDIR = /mit/afsdev/bld/dest
#else
AFSDIR = /usr/local
#endif

AFSLIBS = $(AFSDIR)/lib/afs/libauth.a $(AFSDIR)/lib/afs/libsys.a

#ifdef ultrix
#ifdef vax
MACHDEP=-DPOSIX -DSYSLOG42
#else
MACHDEP=-DPOSIX -DSYSLOG42 -Olimit 537
#endif
#endif
#ifdef i386
MACHDEP=-DPOSIX -DSYSV -DINITTAB -DNOPFLAG
#endif

build_program(login,login.o,,$(AFSLIBS) -lknet -lkrb -ldes -lhesiod)
install_program(login,-o root -m 4555,/bin/login)
